generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//form

model Form {
  id String @id @default(uuid())
  title String
  question Question[]
  response Response[]
}

model Question {
  id Int @id @default(autoincrement())
  formID String
  form Form @relation(fields: [formID], references: [id])
  title String
  type String
  required Boolean
  options Option[]
  limitAns Int @default(1)
}

model Response {
  id String @id @default(uuid())
  formID String
  form Form @relation(fields: [formID], references: [id])
  answer Json
}

model Option {
  id Int @id @default(autoincrement())
  limit Int
  questionID Int
  question Question @relation(fields: [questionID], references: [id], onDelete: Cascade)
}

model GetAnswer {
  id Int @id @default(autoincrement())
}


