generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement()) @map("id")
  email     String    @unique(map: "email") @db.VarChar(255)
  name      String    @db.VarChar(255)
  password  String    @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(0)


  @@map("User")
}

model Form {
  id String @id @default(uuid())
  userID Int
  title String
  description String?
  color String
  active Boolean @default(true) // ✅ ใช้ Boolean เช็คสถานะของฟอร์ม
  theme String
  questions Question[] // ✅ ใช้ "questions" แทน "question" เพื่อความเข้าใจง่าย
  responses Response[]
  createdAt DateTime @default(now())
}

enum QuestionType {
  text
  check
  number
  dropdown
  radio
  
}

model Question {
  id Int @id @default(autoincrement())
  formID String
  form Form @relation(fields: [formID], references: [id])
  question String
  type String // ✅ ใช้ ENUM แทน String
  required Boolean @default(false)
  options Option[] 
  limitAns Int @default(1) // ✅ จำกัดจำนวนคำตอบที่เลือกได้
}

model Option {
  id Int @id @default(autoincrement())
  text String @default("") // ✅ ป้องกัน null
  questionID Int
  questions Question @relation(fields: [questionID], references: [id], onDelete: Cascade)
}

model Response {
  id String @id @default(uuid())
  formID String
  form Form @relation(fields: [formID], references: [id])
  userID Int // ✅ เชื่อมกับ User
  answer Json
  createdAt DateTime @default(now())
}
